<div class="container">
  <% flash.each do |name, message| %>
    <div class="alert alert-primary d-flex align-items-center" role="alert">
        <strong><%= message %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>


