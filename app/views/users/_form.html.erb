<div class="container">
  <div class="row justify-content-center">
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

      <div class = "form-group row">
        <%= form.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          <%= render "shared/errors_messages", obj: @user %>
        </div>
      </div>

      <div class = "form-group row">
        <%= form.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          <%= render "shared/errors_messages", obj: @user %>
        </div>
      </div>

      <div class = "form-group row">
        <%= form.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password"%>
          <%= render "shared/errors_messages", obj: @user %>
        </div>
      </div>

      <div class = "justify-content-center p-3">
        <%= form.submit(@user.new_record? ? "Sign UP" : "Update account", class: "btn btn-outline-light btn-lg") %>
      </div>
    <% end %>
    <p><%= link_to "[ Cancel and return to articles list ]", articles_path, class: "text-info" %></p>
  </div>
</div>
