<div class="container">
  <div class="row justify-content-center">
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

      <div class = "form-group row">
        <%= form.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
        </div>
      </div>

      <div class = "form-group row">
        <%= form.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"%>
        </div>
      </div>

      <div class = "justify-content-center p-3">
        <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
    <p><%= link_to "[ Cancel and return to articles list ]", articles_path, class: "text-info" %></p>
  </div>
</div>
