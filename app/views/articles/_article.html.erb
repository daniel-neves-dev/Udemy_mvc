
<div class="container">
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col 8">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            by <%= link_to article.user.name, article %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= simple_format(truncate(article.description, length: 100)) %></p>
            <%=link_to "View", article, class: "btn btn-outline-success"%>
            <% if logged_in? && (article.user ==  current_user || current_user.admin?) %>
              <%=link_to "Edit", edit_article_path(article), class: "btn btn-outline-info"%>
              <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
              <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created <%= time_ago_in_words(article.created_at) %> ago.
              Edited <%= time_ago_in_words(article.updated_at) %> ago.
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

